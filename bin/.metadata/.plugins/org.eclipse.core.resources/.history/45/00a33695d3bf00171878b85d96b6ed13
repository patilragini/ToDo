package com.bridgelabz.Test;

import org.springframework.context.ApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;

import com.bridgelabz.SendMail;

public class TestSendMail {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
ApplicationContext context=new ClassPathXmlApplicationContext("com/bridgelabz/Test/Spring-Mail.xml");
System.out.println(context);
SendMail mail=(SendMail) context. getBean("sendMail");
mail.sendMail("patilrag21@gmail.com","somasingh1701@gmail.com", "Test", "Hello \n Spring \n First Mail");

	}

}
